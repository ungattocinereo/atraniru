# Ghost CMS Configuration
GHOST_URL=http://localhost:40002/blog
GHOST_PUBLIC_URL=https://atrani.ru/blog
CONTENT_API_KEY=your_ghost_content_api_key_here

# Webhook server (Ghost + GitHub rebuild triggers)
WEBHOOK_SECRET=generate_a_random_secret_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
WEBHOOK_PORT=40003

# Telegram Bot (contact form primary delivery)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Gmail SMTP (contact form fallback delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_gmail_app_password
SMTP_TO=destination-email@example.com

# Message queue directory (must match Docker volume mount)
MESSAGE_QUEUE_DIR=/data/queue
