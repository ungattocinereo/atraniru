  }

  .coast-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: start;
  }

  .coast-content p,
  .dolce-content p {
    margin-bottom: 20px;
    line-height: 1.8;
    font-size: 16px;
  }

  .dolce-content h3 {
    font-family: var(--font-display);
    font-size: 32px;
    font-weight: 800;
    color: var(--color-navy);
    margin-bottom: 24px;
    letter-spacing: -1px;
  }

  @media (max-width: 1024px) {
    .coast-grid {
      grid-template-columns: 1fr;
      gap: 60px;
    }
  }

  @media (max-width: 768px) {
    .about-coast {
      padding: 80px 0;
    }
  }
</style>
