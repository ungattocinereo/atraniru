<section id="apartments" class="apartments">
  <div class="section-header reveal">
    <p class="section-label">03 — Размещение</p>
    <h2 class="section-title">Наши апартаменты</h2>
  </div>

  <div class="apartments-list">
    {apartments.map((apt) => (
      <article class="apartment-item reveal">
        <div class="apartment-image">
          <img src={apt.image} alt={apt.title} loading="lazy" />
        </div>
        <div class="apartment-content">
          <span class="apartment-number">{apt.number}</span>
          <h3>{apt.title}</h3>
          <p>{apt.description}</p>
          <a href="#contact" class="btn btn-outline">Подробнее</a>
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  .apartments {
    background: #F0F4F8;
    padding: 120px 40px;
  }

  .section-header {
    max-width: 1200px;
    margin: 0 auto 60px;
  }

  .apartments-list {
    max-width: 1200px;
    margin: 0 auto;
  }

  .apartment-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    margin-bottom: 2px;
    background: white;
    overflow: hidden;
    transition: all 0.4s var(--ease-out);
  }

  .apartment-item:nth-child(even) {
    direction: rtl;
  }

  .apartment-item:nth-child(even) > * {
    direction: ltr;
  }

  .apartment-item:hover {
    transform: translateX(8px);
    box-shadow: -8px 0 0 var(--color-orange);
  }

  .apartment-image {
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .apartment-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(50%);
    transition: all 0.5s var(--ease-out);
  }

  .apartment-item:hover .apartment-image img {
    filter: grayscale(0%);
    transform: scale(1.05);
  }

  .apartment-content {
    padding: 48px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .apartment-number {
    font-family: var(--font-display);
    font-size: 14px;
    font-weight: 700;
    color: var(--color-orange);
    margin-bottom: 16px;
  }

  .apartment-content h3 {
    font-family: var(--font-display);
    font-size: 32px;
    font-weight: 800;
    margin-bottom: 16px;
    letter-spacing: -1px;
    color: var(--color-navy);
  }

  .apartment-content p {
    font-size: 16px;
    color: var(--color-gray-dark);
    margin-bottom: 24px;
  }

  @media (max-width: 1024px) {
    .apartment-item {
      grid-template-columns: 1fr;
    }

    .apartment-item:nth-child(even) {
      direction: ltr;
    }

    .apartment-content {
      padding: 32px;
    }
  }

  @media (max-width: 768px) {
    .apartments {
      padding: 80px 20px;
    }

    .apartment-content {
      padding: 24px;
    }

    .apartment-content h3 {
      font-size: 24px;
    }

    .apartment-item:hover {
      transform: none;
      box-shadow: none;
    }
  }
</style>
