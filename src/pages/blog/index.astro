---
import Layout from '../../layouts/Layout.astro';
import { getAllPosts, formatDate } from '../../lib/ghostApi';
import { rewriteGhostUrl } from '../../lib/ghost';

const posts = await getAllPosts({ limit: 'all' });
---

<Layout title="Блог — Atrani.ru" description="Статьи, истории и советы о жизни на Амальфитанском побережье">
  <section class="blog-hero">
    <!-- Background decorative text -->
    <div class="blog-hero-bg-text" aria-hidden="true">БЛОЖЕ</div>

    <!-- Hero background image -->
    <div class="blog-hero-bg-image">
      <img
        src="/images/index/atrani-4-index.jpg"
        alt="Атрани — вид на город у моря"
        loading="eager"
      />
    </div>

    <!-- Overlay for text readability -->
    <div class="blog-hero-overlay"></div>

    <!-- Hero content -->
    <div class="blog-hero-content">
      <p class="hero-label">Блог</p>
      <h1 class="blog-hero-title">
        <span class="highlight">ЖИЗНЬ</span>
        <span class="blog-hero-title-line">У МОРЮШКА</span>
      </h1>
      <p class="blog-hero-subtitle">Маршруты, секретные места, гастрономия и советы от тех, кто живёт на Амальфитанском побережье</p>
    </div>

    <!-- Scroll indicator -->
    <div class="scroll-indicator" aria-hidden="true">Scroll</div>
  </section>

  <section class="blog-listing">
    <div class="blog-listing-grid">
      {posts.map((post, i) => (
        <article class={`blog-listing-card reveal ${i === 0 ? 'blog-listing-card--featured' : ''}`}>
          <a href={`/blog/${post.slug}`}>
            <div class="blog-listing-card-image">
              <img
                src={rewriteGhostUrl(post.feature_image) || '/images/placeholder-blog.jpg'}
                alt={post.title}
                loading={i < 3 ? 'eager' : 'lazy'}
              />
              {post.primary_tag && (
                <span class="blog-listing-card-category">{post.primary_tag.name}</span>
              )}
            </div>
            <div class="blog-listing-card-content">
              <h2 class="blog-listing-card-title">{post.title}</h2>
              <p class="blog-listing-card-excerpt">{post.custom_excerpt || post.excerpt}</p>
              <div class="blog-listing-card-meta">
                {post.primary_author && (
                  <span class="blog-listing-card-author">
                    {post.primary_author.profile_image && (
                      <img src={rewriteGhostUrl(post.primary_author.profile_image)} alt={post.primary_author.name} class="blog-listing-card-author-img" />
                    )}
                    {post.primary_author.name}
                  </span>
                )}
                <time datetime={post.published_at}>{formatDate(post.published_at)}</time>
                <span>{post.reading_time} мин</span>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>

    {posts.length === 0 && (
      <div class="blog-empty">
        <p>Статьи скоро появятся. Следите за обновлениями!</p>
      </div>
    )}
  </section>

  <section class="newsletter">
    <div class="newsletter-content">
      <h2 class="newsletter-title">Италия в вашей почте</h2>
      <p class="newsletter-text">Раз в неделю — новые маршруты, секретные места и истории из жизни на побережье. Без спама, только полезное.</p>
      <form class="newsletter-form">
        <input type="email" class="newsletter-input" placeholder="Ваш email" required />
        <button type="submit" class="newsletter-btn">Подписаться</button>
      </form>
    </div>
  </section>
</Layout>

<style is:global>
  @import '../../styles/blog.css';
</style>

<style>
  .blog-hero {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    background: var(--color-navy-deep);
    color: white;
    overflow: hidden;
    padding: 120px 40px 80px;
  }

  .blog-hero-bg-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: var(--font-display);
    font-size: clamp(128px, 21vw, 340px);
    font-weight: 900;
    color: rgba(255, 255, 255, 0.03);
    pointer-events: none;
    user-select: none;
    z-index: 2;
    white-space: nowrap;
  }

  .blog-hero-bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: 0;
    animation: fadeIn 1.2s var(--ease-out) 0.6s forwards;
  }

  .blog-hero-bg-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .blog-hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 10, 39, 0.88) 0%,
      rgba(0, 10, 39, 0.7) 50%,
      rgba(0, 10, 39, 0.5) 100%
    );
    z-index: 0;
  }

  .blog-hero-content {
    position: relative;
    z-index: 3;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  .blog-hero-title {
    font-family: var(--font-display);
    font-size: clamp(48px, 10vw, 160px);
    font-weight: 900;
    line-height: 0.9;
    letter-spacing: -4px;
    margin-bottom: 32px;
    opacity: 0;
    animation: fadeInUp 0.8s var(--ease-out) 0.3s forwards;
  }

  .blog-hero-title .highlight {
    display: block;
    color: var(--color-orange);
  }

  .blog-hero-title-line {
    white-space: nowrap;
  }

  .blog-hero-subtitle {
    font-size: clamp(18px, 2vw, 24px);
    color: var(--color-gray);
    max-width: 600px;
    margin-bottom: 40px;
    opacity: 0;
    animation: fadeInUp 0.8s var(--ease-out) 0.4s forwards;
  }

  .blog-listing {
    padding: 80px 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .blog-listing-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  .blog-listing-card--featured {
    grid-column: 1 / -1;
  }

  .blog-listing-card--featured .blog-listing-card-image {
    aspect-ratio: 21/9;
  }

  .blog-listing-card--featured .blog-listing-card-title {
    font-size: 32px;
  }

  .blog-listing-card {
    background: white;
    overflow: hidden;
    transition: all 0.4s var(--ease-out);
    border: 1px solid var(--color-gray-light);
  }

  .blog-listing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(5, 10, 20, 0.15);
  }

  .blog-listing-card a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .blog-listing-card-image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
    background: var(--color-navy);
  }

  .blog-listing-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(30%);
    transition: all 0.5s var(--ease-out);
  }

  .blog-listing-card:hover .blog-listing-card-image img {
    filter: grayscale(0%);
    transform: scale(1.05);
  }

  .blog-listing-card-category {
    position: absolute;
    top: 16px;
    left: 16px;
    padding: 6px 12px;
    background: var(--color-orange);
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: white;
  }

  .blog-listing-card-content {
    padding: 28px;
  }

  .blog-listing-card-title {
    font-family: var(--font-display);
    font-size: 22px;
    font-weight: 700;
    line-height: 1.3;
    letter-spacing: -0.5px;
    margin-bottom: 12px;
    color: var(--color-navy);
  }

  .blog-listing-card-excerpt {
    font-size: 16px;
    color: var(--color-gray-dark);
    line-height: 1.6;
    margin-bottom: 16px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-listing-card-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 13px;
    color: var(--color-gray);
  }

  .blog-listing-card-author {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
    color: var(--color-navy);
  }

  .blog-listing-card-author-img {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--color-orange);
  }

  .blog-empty {
    text-align: center;
    padding: 80px 40px;
    color: var(--color-gray);
    font-size: 18px;
  }

  @media (max-width: 768px) {
    .blog-hero {
      padding: 100px 20px 60px;
    }

    .blog-hero-overlay {
      background: linear-gradient(
        135deg,
        rgba(0, 10, 39, 0.92) 0%,
        rgba(0, 10, 39, 0.8) 50%,
        rgba(0, 10, 39, 0.65) 100%
      );
    }

    .blog-listing {
      padding: 60px 20px;
    }

    .blog-listing-grid {
      grid-template-columns: 1fr;
    }

    .blog-listing-card--featured .blog-listing-card-image {
      aspect-ratio: 16/10;
    }

    .blog-listing-card--featured .blog-listing-card-title {
      font-size: 22px;
    }

    .blog-listing-card-content {
      padding: 20px;
    }
  }
</style>
